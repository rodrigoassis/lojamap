<table>
	<% @cart.itens.each do |item| %>
		<tr>
			<td><%= item.quantidade %>&times;</td>
			<td><%= item.produto.nome %></td>
			<td><%= number_to_currency(item.preco_total) %></td>
		</tr>
	<% end %>
	<tr>
		<td>Total</td>
		<td><%= number_to_currency(@cart.preco_total) %></td>
	</tr>
</table>

<%= button_to 'Limpar carrinho', { :controller => "carts", :action => "destroy" } , :confirm => 'Tem certeza?' %>
